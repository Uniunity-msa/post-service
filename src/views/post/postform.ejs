    <div class="container">
        <div class="card">
            <select class="form-select" aria-label="Default select example" id="select_post_category">
                <option selected>글 카테고리를 선택해주세요</option>
                <option value="제휴 소식">제휴 등록</option>
                <option value="제휴 추천">제휴 추천</option>
                <option value="제휴 제안">제휴 제안</option>
                <option value="총학생회 공지사항">총학생회 공지사항</option>
                <option value="잡담">잡담</option>
                <option value="가게 홍보">가게 홍보</option>
            </select>

            <div id="postWrite">
                <div class="mt-3 mb-3 input-group flex-nowrap">
                    <input type="text" class="form-control" placeholder="글 제목" id="post_title" aria-label="post title"
                        aria-describedby="addon-wrapping">
                </div>
                <div id="editor" ></div>
                <div class="mt-3 mb-3 d-flex justify-content-end" >
                    <button class="btn btn-primary btn-publish me-4" type="submit" id="post_submit_btn">발행하기</button>
                </div>
            </div>
        </div>



        <!-- 제휴가게 등록 페이지 -->
        <div class="container text-center" id="sotreUpload">
            <div class="row">
                <div class="col" id="map"> </div>
                <div class="col">
                    <!-- 입력 폼 -->
                    <!-- 가게 이름 입력 -->
                    <form action="" class="inputForm">
                        <div class="input-group mb-3" class="inputBox">
                            <input type="text" class="form-control inputBoxS" id="storeName"
                                placeholder="제휴 가게 이름을 입력해주세요." aria-label="Recipient's username"
                                aria-describedby="button-addon2">
                        </div>
                    </form>
                    <!-- 가게 주소 입력 -->
                    <form action="" class="inputForm">
                        <div class="input-group mb-3" class="inputBox">
                            <input type="text" class="form-control inputBoxS" id="store_location"
                                placeholder="제휴 가게 주소를 정확하게 입력해주세요.(정확하게 기입이 안될 시 지도에 마커가 표시되지 않습니다.)"
                                aria-label="Recipient's username" aria-describedby="button-addon2">
                            <button class="btn btn-outline-secondary inputBtn" id="serchBtnAddr"
                                type="button">입력</button>
                        </div>
                    </form>
                    <!-- 제휴 내용 입력 -->
                    <form action="" class="inputForm">
                        <div class="input-group mb-3" class="inputBox">
                            <input type="text" class="form-control inputBoxS" id="content"
                                placeholder="제휴 가게 정보의 제휴 정보를 입력해주세요." aria-label="Recipient's username"
                                aria-describedby="button-addon2">
                        </div>
                    </form>
                    <!-- 제휴 시작 날짜 -->
                    <form action="" class="inputForm">
                        <div class="input-group mb-3" class="inputBox">
                            <input type="date" class="form-control inputBoxS" id="startDate" placeholder="제휴혜택 시작 날짜"
                                aria-label="Recipient's username" aria-describedby="button-addon2">
                        </div>
                    </form>
                    <!-- 제휴 종료 날짜 -->
                    <form action="" class="inputForm">
                        <div class="input-group mb-3" class="inputBox">
                            <input type="date" class="form-control inputBoxS" id="endDate" placeholder="제휴혜택 종료 날짜"
                                aria-label="Recipient's username" aria-describedby="button-addon2">
                        </div>
                    </form>
                    <!-- 등록 버튼 -->
                    <button type="button" class="btn btn-primary btn-lg" id="uploadBtn">등록하기</button>
                </div>
            </div>
        </div>


    </div>
